{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^com.graphql-java"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "matchPackageNames": [
        "io.github.graphql-java:graphql-java-annotations"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+?$/"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
